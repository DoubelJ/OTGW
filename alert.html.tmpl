%# -*- html -*-
% global cfg theme
<!DOCTYPE html>
<html lang="en">
[include header.inc]
<body>
[include navbar.inc]

<div class="container">
	<div class="row">
<h1>Alert</h1>

<div>

<form class="form-horizontal" role="form" method="post" action="alert.html">
  <div class="form-group">
    <label class="control-label col-sm-2" for="pressurehigh">pressurehigh:</label>
    <div class="col-sm-2">
      <input type="text" class="form-control" id="pressurehigh" value="$cfg(alert,pressurehigh)">
    </div>
    <div class="col-sm-8">
		<div class="alert alert-info">
			Here you can set the trigger when the pressure is too high
		</div>
    </div>	
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pressurelow">pressurelow:</label>
    <div class="col-sm-2"> 
      <input type="text" class="form-control" id="pressurelow" value="$cfg(alert,pressurelow)">
    </div>
    <div class="col-sm-8">
		<div class="alert alert-info">
			Here you can set the trigger when the pressure is too low
		</div>
    </div>		
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="roomcold">roomcold:</label>
    <div class="col-sm-2"> 
      <input type="text" class="form-control" id="roomcold" value="$cfg(alert,roomcold)">
    </div>
    <div class="col-sm-8">
		<div class="alert alert-info">
			Here you can set the trigger when the room temperature is too cold
		</div>
    </div>		
  </div>  

  <hr>
  <button type="submit" class="btn btn-primary">Save</button>  
</form>

</div>
</div>
</div>
<!--[include footer.inc]-->
</body>
</html>
